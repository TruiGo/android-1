<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="JitsiTheme" parent="@android:style/Theme.Holo">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- <item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="JitsiLoginTextView" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/whitefield</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/logoblue</item>
    </style>

    <style name="MediumFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="ScreenPadding">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

</resources>